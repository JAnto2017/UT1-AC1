<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.joseantonio.ut1_act1_saludo.MainActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <TextView
            android:id="@+id/txtView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="28dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="53dp"
            android:text="Escriba su nombre" />

        <EditText
            android:id="@+id/editTxt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtView1"
            android:layout_alignStart="@+id/txtView1"
            android:layout_below="@+id/txtView1"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editTxt1"
            android:layout_alignStart="@+id/editTxt1"
            android:layout_below="@+id/editTxt1"
            android:layout_marginTop="39dp"
            android:onClick="BotonSaludar"
            android:text="Saludar" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btn1"
            android:layout_alignBottom="@+id/btn1"
            android:layout_toEndOf="@+id/editTxt1"
            android:layout_toRightOf="@+id/editTxt1"
            android:onClick="BotonLimpiar"
            android:text="Limpiar" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
